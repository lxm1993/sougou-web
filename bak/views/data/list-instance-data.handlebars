<link rel="stylesheet" href="/vendor/bootstrap/table/bootstrap-table.css">
<link rel="stylesheet" href="/css/table.css">
<div class="container">
    <div class="row">
        <table id="table" class="table table-striped"></table>
    </div>
    <div style="display:none">
        <div id="kmap-customer-tool-bar-2">
            <div class="customer-table-cell">
                <div class="btn-group">
                    <button id="addInstanceDataButton" type="button" class="btn btn-custom-1 btn-sm"><span class="glyphicon glyphicon-plus"></span>&nbsp;添加</button>
                    <button type="button" class="btn btn-custom-1 btn-sm" data-toggle="modal"
                            data-target="#uploadModal"><span class="glyphicon glyphicon-upload"></span>&nbsp;上传</button>
                    <button type="button" class="btn btn-custom-1 btn-sm" data-toggle="modal"
                            data-target="#downloadModal"><span class="glyphicon glyphicon-download"></span>&nbsp;下载</button>
                    <a href="javascript:history.back();" class="btn btn-custom-1 btn-sm">返&nbsp;回</a>
                </div>
            </div>
        </div>
    </div>
    <!-- 模态框（Modal） -->
    <div class="modal fade upload-modal" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="upload-form" enctype="multipart/form-data">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h5 class="modal-title">数据上传</h5>
                    </div>
                    <div class="modal-body">
                        <div class="form-group row">
                            <label for="fileType" class="col-sm-3 control-label text-right">文件类型：</label>
                            <div class="col-sm-8">
                                <select id="fileType" name="fileType" class="form-control" >
                                    <option value="1">text</option>
                                    <option value="2">xml</option>
                                    <option value="3">excel</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="file" class="col-sm-3 control-label text-right">上传文件：</label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <input id="fileName" type="text" placeholder="上传文件" class="form-control">
                                <span class="input-group-btn">
                                   <button class="btn btn-default" type="button">
                                       <input type="file" id="file" name="file" required autofocus>
                                       选择文件
                                   </button>
                                </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button id="uploadButton" type="button" class="btn btn-primary">上传</button>
                    </div>
                </form>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>
    <div class="modal fade upload-modal" id="downloadModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h5 class="modal-title">数据上传</h5>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="fileType" class="col-sm-3 control-label text-right">文件类型：</label>
                        <div class="col-sm-8">
                            <select id="downloadFileType" name="fileType" class="form-control" >
                                <option value="1">text</option>
                                <option value="2">xml</option>
                                <option value="3">excel</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button id="downLoadButton" type="button" class="btn btn-primary">下载</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>
</div>
<script type="text/javascript">
    window.moduleName = 'data/instanceData';
</script>